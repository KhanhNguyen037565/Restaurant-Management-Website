    <link href="https://fonts.googleapis.com/css?family=Encode+Sans" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/css/business-casual.css" rel="stylesheet">

    <style>
        #DangXuat,#QLAdmin {
            display: none;
        }
    </style>
    @if (Session["EmailDangNhap"] != null)
    {
        <style>
            #DangNhap {
                display: none;
            }
            #DangXuat {
                display: block;
            }
        </style>
        if (Convert.ToInt32(Session["LoaiTk"])!=2)
        {
            <style>
                #QLAdmin 
                {
                    display: block;
                }
            </style>
