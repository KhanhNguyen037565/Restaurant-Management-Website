@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebsiteNhaHang.Models.TaiKhoan>

@{
    ViewBag.Title = "Danh sách tài khoản";
    Layout = "~/Views/layout/Admin/_QuanLy.cshtml";
}


<div class="row-fluid">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Email)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.First().MatKhau)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.First().TenNguoiDung)
                </th>
                <th style="width:20%">
                    @Html.DisplayNameFor(model => model.First().HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().SoDienThoai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().LoaiTaiKhoan1.TenLoaiTaiKhoan)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.MatKhau)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNguoiDung)
                    </td>
                    <td>
                        <img src="@Url.Content("~/Content/img/TaiKhoan/" + item.HinhAnh)" style="width:70%" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoaiTaiKhoan1.TenLoaiTaiKhoan)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.MaTaiKhoan }) |
                            @Html.ActionLink("Details", "Details", new { id = item.MaTaiKhoan }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.MaTaiKhoan })*@
                        <i class="icon-pencil bigger-130 green">@Html.ActionLink("Sửa", "Edit", new { id = item.MaTaiKhoan })</i> ||                       
                        <i class="icon-trash bigger-130 red">@Html.ActionLink("Xóa", "Delete", new { id = item.MaTaiKhoan })</i>
                    </td>
                </tr>
            }

        </table>
        <div class="dataTables_paginate paging_bootstrap pagination align-center ml-2">
            @Html.ActionLink("Thêm tài khoản", "Create")
        </div>
        <div class="row-fluid ml-2">
            <div class="span6">
                <div class="dataTables_info" id="sample-table-2_info">
                    Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
            </div>
            <div class="span6">
                <div class="dataTables_paginate paging_bootstrap pagination">
                    <ul>
                        @Html.PagedListPager(Model, Page => Url.Action("DanhSachTaiKhoan", new { Page = Page }))
                    </ul>
                </div>
            </div>
        </div>
    </div>