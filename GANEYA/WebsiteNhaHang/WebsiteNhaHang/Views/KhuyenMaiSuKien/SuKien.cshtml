@using WebsiteNhaHang.Models
@model List<SuKien>

@foreach (var item in Model)
{
    int a = item.MaSuKien + 5000;
    <li class="media mb-3">
        <img class="d-flex mr-3 " src="@Url.Content("~/Content/img/MonAn/KhuyenMai-Sukien/"+item.HinhAnh)" style="max-width:100px" alt="Generic placeholder image">
        <div class="media-body">
            <h5 class="mt-0 mb-1">@item.TenSuKien</h5>
            @item.ChiTiet <button type="button" class="btn btn-link" data-toggle="modal" data-target=".bd-example-modal-lg-@a">Xem chi tiết</button>
            <div class="modal fade bd-example-modal-lg-@a" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">@item.TenSuKien</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body pre-scrollable text-center" style="min-height: 450px">
                            <img src="@Url.Content("~/Content/img/MonAn/KhuyenMai-Sukien/" + item.HinhAnh)" class="img-fluid" alt="Responsive image" style="width: 800px">
                            <p class="text-left">@item.ChiTiet</p>
                            <br />
                            <p class="text-left">Ngày bắt đầu: @item.NgayBatDau</p>
                            <br />
                            <p class="text-left">Ngày kết thúc: @item.NgayKetThuc</p>
                            <br />
                            <p class="text-left">Người Đăng: @item.NguoiDang</p>

                        </div>
                        <div class="card-footer text-muted" style="max-height: 60px">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </li>
}


