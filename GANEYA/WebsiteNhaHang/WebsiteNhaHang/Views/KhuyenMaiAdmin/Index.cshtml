@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebsiteNhaHang.Models.KhuyenMai>

@{
    ViewBag.Title = "Quản lý Khuyến mãi";
    Layout = "~/Views/layout/Admin/_QuanLy.cshtml";
}
<div class="row-fluid">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().TenKhuyenMai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ChiTietKhuyenMai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().HinhAnh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().NgayDang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().NgayBatDau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().NgayKetThuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TiLeGiamGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TaiKhoan.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKhuyenMai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChiTietKhuyenMai)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.HinhAnh)*@
                    <img src="@Url.Content("~/Content/img/MonAn/KhuyenMai-Sukien/" + @item.HinhAnh)" style="width:70%" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayBatDau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayKetThuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TiLeGiamGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan.Email)
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaKhuyenMai }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaKhuyenMai })
                </td>
                <td>
                    
                </td>
            </tr>
        }

    </table>
    <div class="dataTables_paginate paging_bootstrap pagination align-center ml-2">
        @Html.ActionLink("Thêm khuyến mãi", "Create")
    </div>
    <div class="row-fluid ml-2">
        <div class="span6">
            <div class="dataTables_info" id="sample-table-2_info">
                Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>
        </div>
        <div class="span6">
            <div class="dataTables_paginate paging_bootstrap pagination">
                <ul>
                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page = Page }))
                </ul>
            </div>
        </div>
    </div>
</div>